// Reset 
html,body,div,span,iframe,h1,h2,h3,p,blockquote,pre,a,address,code,del,em,img,small,strong,b,u,i,dl,dt,dd,ol,ul,li,fieldset,form,label,table,tr,th,td,article,aside,canvas,figure,footer,header,nav,section
    margin: 0
    padding: 0
    border: 0
    vertical-align: baseline
    font: inherit
    font-size: 100%
article,aside,figure,footer,header,,nav,section
    display: block
ol,ul
    list-style: none
body
    line-height: 1
    padding: 0 40px
    color: #333
    font: 16px 'Helvetica Neue', Helvetica, Arial, sans-serif
    word-break: break-all
a
    text-decoration: none
    color: inherit
    
select, button, input, textarea
    display: block
    box-sizing: border-box
    width: 100%
    border: 0

// MEMO #2b9cce ~ #66bec8

// Utility
// ======================================
.u-cf:before, .u-cf:after
    display: table !important
    content: ""
.u-cf:after
    clear: both
.u-mls
    margin-left: 10px
.u-mts
    margin-top: 10px
.u-mbm
    margin-bottom: 20px
.u-nw
    white-space: nowrap

// Layout
// ======================================
.l-wrapper
    display: flex
.l-paneInput
    position: fixed
    max-width: 480px
.l-paneOutput
    width: 100%
    padding: 80px 0 100px 520px

// Animation
// ======================================
@keyframes shake
    0%, 100%
        transform: translateX(0)
    10%, 30%, 50%, 70%, 90%
        transform: translateX(-10px)
    20%, 40%, 60%, 80%
        transform: translateX(10px)

// Component
// ======================================
.c-ribbon
    position: fixed;
    top: 0
    right: 0

.c-title
    margin: 80px 0 12px
    color: #999
    font-weight: 100
    font-size: 80px

.c-tabs
    display: flex
    margin: 20px 0

.c-tabs-s-item
    width: 200px
    border-bottom: 3px #eee solid
    color: #999
    text-indent: 1em
    font-size: 18px
    transition-timing-function: ease-out
    transition-duration: 0.4s
    transition-property: border-bottom-color

.c-tabs-s-item.is-active
    border-bottom-color: #66bec8

.c-tabs-s-item > .block
    display: block
    padding: 10px 0
    text-decoration: none

.c-tabContents-s-item
    display: none
    min-height: 40px

.c-tabContents-s-item.is-active
    display: block

.c-textBox
    padding: 1em
    height: 240px
    border-radius: 4px
    background: #eee
    color: #666
    font-weight: bold
    font-size: 14px
    font-family: Consolas, 'Andale Mono', 'Lucida Console', Monaco, 'Courier New', Courier, monospace

.c-uriBox
    padding: 1em
    height: 40px
    border-radius: 4px
    background: #eee
    color: #666
    font-weight: bold
    font-size: 14px
    font-family: Consolas, 'Andale Mono', 'Lucida Console', Monaco, 'Courier New', Courier, monospace

.c-button
    position: relative
    display: block
    margin: 40px 0
    padding: 0 1em
    max-width: 240px
    height: 48px
    border: 0
    border-radius: 4px
    background: #66bec8
    color: #fff
    text-align: center
    font-size: 18px
    line-height: 48px

.c-button:hover
    background: #2b9cce

.c-button img
    display: none

.c-button.is-loading img
    display: inline

.c-button.c-button-m-danger
    background-color: #db7080
    animation-name: shake
    animation-duration: 1s
    animation-fill-mode: both

.c-button.c-button-m-danger:hover
    background-color: #db7080

.c-resultBox
    column-count: 3
    column-gap: 20px

.c-resultBox-s-item
    margin: 2px 2px 16px
    padding-top: 12px
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2)

.c-resultBox-s-item .inner
    display: inline-block

.c-resultBox-s-item .header
    display: inline
    margin-left: -2px
    padding: 2px 24px 2px 8px
    border-left: 2px #ccc solid
    color: #666
    line-height: 1.5
    background: #eee
    font-size: 14px

.c-resultBox-s-item .section
    padding: 12px 12px 24px
    color: #66bec8
    font-weight: bold
    font-size: 32px

.uniqueColor .inner,
.uniqueFontSize .inner
    display: block

.published .section,
.paths .section,
.mostIdentifierSelector .section,
.lowestCohesionSelector .section,
.uniqueColor .section,
.uniqueFontSize .section,
.propertiesCount .section
    font-size: 20px
    line-height: 1.3

.c-colorBox
    display: inline-block
    margin-right: 8px
    width: 20px
    height: 20px
    border-radius: 2px
    box-shadow: 0 0 1px 0 rgba(0,0,0, 0.4)
    vertical-align: -4px

.c-footer
    position: fixed
    bottom: 0
    left: 0
    right: 0
    margin: 120px 40px 0
    padding-top: 20px
    border-top: 1px #eee solid
    background-color: #FFFFFF
    color: #999
    font-size: 14px

.c-footer-s-item
    float: left
    margin-bottom: 20px
    // margin: 0 20px 20px 0
    // padding-right: 20px
    & + &
      border-left: 1px #ccc solid
      margin-left: 20px
      padding-left: 20px

.c-footer-s-item-m-copyright
    margin-right: 0
    padding-right: 0
    border-right: 0

.c-footer-s-item > a
    color: #66bec8
    transition-timing-function: ease-out
    transition-duration: 0.4s
    transition-property: color

.c-footer-s-item > a:hover
    color: #2b9cce

@media screen and (min-width: 1680px)
    .c-resultBox
        column-count: 4

@media screen and (max-width: 1280px)
    .c-resultBox
        column-count: 2

@media screen and (max-width: 1024px)
    .c-resultBox
        column-count: 1

@media screen and (max-width: 640px)
    body
        padding: 0 20px
        font-size: 12px
    .l-wrapper
        display: flex
        flex-direction: column
    .l-paneInput
        position: relative
    .l-paneOutput
        padding: 0
    .c-title
        margin: 40px 0 0
        font-size: 40px
    .c-tabs-s-item
        font-size: 14px
    .c-textBox
        height: 120px
    .c-footer
        position: static
        margin-left: 0
        margin-right: 0
    .c-footer-s-item
        & + &
          margin-left: 10px
          padding-left: 10px
        & + .c-footer-s-item-m-copyright
          border-left: 0
          margin-left: 0
          padding-left: 0
          
    .c-footer-s-item-m-copyright
        clear: left
        float: none
        margin-bottom: 20px