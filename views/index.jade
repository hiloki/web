extends layout

block content
  .l-wrapper
    .l-paneInput
      h1.c-title
        a(href="/") #{title}
      p.c-description StyleStats is an useful tool to collect CSS statistics!

      ul.c-tabs#js-tabs
        li.c-tabs-s-item.is-active.js-tab-uri(data-mode='uri')
          a.block(href="#uri") URI
        li.c-tabs-s-item.js-tab-upload(data-mode='upload')
          a.block(href="#upload") File Upload
        li.c-tabs-s-item.js-tab-input(data-mode='input')
          a.block(href="#input") Direct Input

      ul.c-tabContents#js-tabContents
        li.c-tabContents-s-item.is-active.js-tab-uri
          input.c-uriBox#js-uri(type="url" placeholder="EX. http://www.google.com/" value="http://www.google.com/")
        li.c-tabContents-s-item.js-tab-upload
          input.c-fileButton#js-upload(type="file" value="Upload" multiple)
        li.c-tabContents-s-item.js-tab-input
          textarea.c-textBox#js-input(placeholder="EX. #foo { color: green; }" autofocus)

      .u-mbm
        button.c-button#js-parse(type="submit")
          span#js-text Parse
          img(src="/img/loading-bars.svg" height="45")

    .l-paneOutput
      ul#js-results.c-resultBox

  ul.c-footer
    li.c-footer-s-item
      a(href="https://github.com/t32k/stylestats") Source
    li.c-footer-s-item
      a(href="https://github.com/t32k/stylestats#metrics") Document
    li.c-footer-s-item
      a(href="https://www.iubenda.com/privacy-policy/855911/legal") Privacy
    li.c-footer-s-item.c-footer-s-item-m-copyright
      span.u-nw &copy; 2014 StyleStats.org


  a(href="https://github.com/t32k/stylestats")
    img.c-ribbon(src="http://aral.github.com/fork-me-on-github-retina-ribbons/right-white@2x.png" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png")
