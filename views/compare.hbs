<header style="background-color: #455A64">
  <h1><a href="/">CompareStats</a></h1>
  <h2>An evaluating tool for writing better CSS</h2>
  <a href="/search" title="Go to Search page" class="search">
    <svg><use xlink:href="#search"></use></svg><span>Search</span></a>
</header>

<main>
  <div class="container">
    {{#if data}}
      <div id="js-sizes-chart" class="c-card c-card--sizeschart"></div>
      {{> list }}
    {{else}}
      <div class="container--404">
        <p>No test results were found. <br>Please try a different test ID.</p>
        <p><a href="/search">Return to search page.</a></p>
      </div>
    {{/if}}
    <div style="clear:both"></div>
  </div>
</main>

<script type="application/json" id="js-sizes-data">{{{ sizes }}}</script>
<script type="application/json" id="js-props-data">{{{ properties }}}</script>