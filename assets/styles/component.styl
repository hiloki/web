// Component
// ======================================
.c-ribbon
  position: fixed;
  top: 0
  right: 0
  width: 149px;
  height: 149px;

.c-title
  margin: 80px 0 8px
  color: #999
  font-weight: 100
  font-size: 80px

.c-description
  margin-bottom: 20px
  font-size: 14px

.c-uriBox
  margin: 3em 0 2em
  padding: 1em
  border-radius: 4px
  background: #eee
  color: #666
  font-weight: bold
  font-size: 14px
  font-family: Consolas, 'Andale Mono', 'Lucida Console', Monaco, 'Courier New', Courier, monospace

.c-button
  position: relative
  display: block
  border: 0
  border-radius: 4px
  background: $mainColor
  color: #fff
  text-align: center
  font-size: 18px
  line-height: 48px

.c-button:hover
  background: $subColor

.c-button img
  display: none

.c-button.is-loading img
  display: inline

.c-button.is-disabled
  background-color: $dangerColor
  animation-name: shake
  animation-duration: 1s
  animation-fill-mode: both

.c-button.is-disabled:hover
  background-color: $dangerColor

.c-resultBox
  column-count: 3
  column-gap: 20px

.c-resultBox-s-item
  margin: 0 2px 16px 4px
  padding-top: 12px
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.2)

.c-resultBox-s-item .inner
  display: inline-block

.c-resultBox-s-item .header
  display: inline
  margin-left: -4px
  padding: 2px 24px 2px 8px
  border-left: 4px $mainColor solid
  color: #666
  background: #eee
  line-height: 1.5
  font-size: 14px

.c-resultBox-s-item.share .header
  border-left: 4px #eee solid
  color: #fff
  background: $mainColor

.c-resultBox-s-item .section
  line-height: 1.2
  padding: 12px 12px 18px
  font-weight: bold
  font-size: 28px
  font-family: Consolas, 'Courier New', Courier, Monaco, monospace
  color: $txtColor

.c-resultBox-s-share
  padding: 4px 4px 12px

.c-resultBox-s-share li
  float: left
  margin: 8px

.c-resultBox-s-share a
  display: inline-block

.c-resultBox-s-share i
  color: #ccc
  font-size: 48px
  transition-timing-function: ease-out
  transition-duration: 0.4s
  transition-property: color

.c-resultBox-s-share a:hover .icon-twitter
  color: $twColor

.c-resultBox-s-share a:hover .icon-facebook
  color: $fbColor

.c-resultBox-s-share a:hover .icon-plus
  color: $gpColor

.uniqueColor .inner,
.uniqueFontSize .inner
  display: block

[data-name='Published'],
[data-name='Paths'],
[data-name='Lowest Cohesion Selector'],
[data-name='Most Identifier Selector'],
[data-name='Unique Font Families'],
[data-name='Unique Colors'],
[data-name='Unique Font Sizes'],
[data-name='Properties Count']
  font-size: 20px !important
  line-height: 1.3 !important

[data-name='Unique Font Families']
  font-weight: normal !important

.c-colorBox
  display: inline-block
  margin-right: -4px
  width: 20px
  height: 20px
  border-radius: 2px
  box-shadow: 0 0 1px 0 rgba(0, 0, 0, 0.4)
  vertical-align: -4px

.c-footer
  position: fixed
  bottom: 0
  left: 0
  right: 0
  margin: 120px 40px 0
  padding-top: 20px
  border-top: 1px #eee solid
  background-color: #fff
  color: #999
  font-size: 14px

.c-footer-s-item
  float: left
  margin-bottom: 20px
  & + &
    border-left: 1px #ccc solid
    margin-left: 20px
    padding-left: 20px

.c-footer-s-item-m-copyright
  margin-right: 0
  padding-right: 0
  border-right: 0

.c-footer-s-item > a
  color: $mainColor
  transition-timing-function: ease-out
  transition-duration: 0.4s
  transition-property: color

.c-footer-s-item > a:hover
  color: $subColor


@media screen and (min-width: 1680px)
  .c-resultBox
    column-count: 4

@media screen and (max-width: 1280px)
  .c-resultBox
    column-count: 2

@media screen and (max-width: 1024px)
  .c-resultBox
    column-count: 1

@media screen and (max-width: 800px)
  body
    padding: 0 20px
    font-size: 12px

  .l-wrapper
    display: flex
    flex-direction: column

  .l-paneInput
    position: relative
    width: 100%

  .l-paneOutput
    padding: 0

  .c-title
    margin: 60px 0 4px
    font-size: 40px

  .c-tabs-s-item
    font-size: 14px

  .c-button
    max-width: 100%

  .c-textBox
    height: 120px

  .c-footer
    position: static
    margin-left: 0
    margin-right: 0

  .c-footer-s-item
    & + &
      margin-left: 10px
      padding-left: 10px
    & + .c-footer-s-item-m-copyright
      border-left: 0
      margin-left: 0
      padding-left: 0

  .c-footer-s-item-m-copyright
    clear: left
    float: none
    margin-bottom: 20px